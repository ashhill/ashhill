<%= error_messages_for :user %>
<% form_for :user do |f| -%>
<p><label for="login">Login</label><br/>
<%= f.text_field :login %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><label for="email">Street</label><br/>
<%= f.text_field :street %></p>

<p><label for="email">City</label><br/>
<%= f.text_field :city %></p>

<p><label for="email">Counrty</label><br/>
<%= f.text_field :country %></p>

<p><label for="email">Postal Code</label><br/>
<%= f.text_field :postal_code %></p>

<p><label for="email">Home Phone Number</label><br/>
<%= f.text_field :home_number %></p>

<p><label for="email">Cell</label><br/>
<%= f.text_field :cell_number %></p>





<p><%= submit_tag 'Sign up' %></p>
<% end -%>
